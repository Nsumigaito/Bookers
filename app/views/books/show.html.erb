<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

<div class = "show-box">
	<div class = "show-main">
		<div class = "show-text">
			<h5 class = "text-title">Title:</h5>
			<span class = "text-body"><%= @book.title %></span>
		</div>
		<div class = "show-text">
			<h5 class = "text-title">Body:</h5>
			<span class = "text-body"><%= @book.body %></span>
		</div>
	</div>

	<div class = "show-link">
		<%= link_to 'Edit', edit_book_path(@book), :class => 'link-edit' %>
		<span class = "link-block">|</span>
		<%= link_to 'Back', books_path, :class => 'link-back' %>
	</div>
</div>